{
  "name": "zksync-hardhat-template",
  "description": "A template for ZKsync smart contracts development with Hardhat",
  "private": true,
  "author": "Matter Labs",
  "license": "MIT",
  "repository": "https://github.com/matter-labs/zksync-hardhat-template.git",
  "scripts": {
    "deploy": "hardhat run ./scripts/deploy.ts",
    "compile": "npm run compile:l1 && npm run compile:l2",
    "clean": "hardhat clean",
    "test": "ZKSYNC=true hardhat test --network anvilZKsync",
    "compile:l1": "ZKSYNC=false hardhat compile --network l1",
    "compile:l2": "ZKSYNC=true  hardhat compile --network anvilZKsync"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "^1.6.1",
    "@matterlabs/hardhat-zksync-deploy": "^1.7.0",
    "@matterlabs/zksync-contracts": "28.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.13",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.13",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/ignition-core": "^0.15.12",
    "@openzeppelin/contracts": "^5.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.17",
    "chai": "^4.5.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.0",
    "hardhat": "^2.24.0",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.2.2",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3",
    "zksync-ethers": "^6.17.0"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0"
  }
}
